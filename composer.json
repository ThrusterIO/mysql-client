{
    "name": "thruster/mysql-client",
    "type": "library",
    "description": "Thruster MysqlClient Component",
    "keywords": ["mysql-client", "thruster"],
    "homepage": "https://thruster.io",
    "license": "MIT",
    "authors": [
        {
